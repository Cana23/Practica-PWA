pipeline {
  agent any

  environment {
    SONAR_TOKEN = credentials('sonar-token')
    VITE_OPENWEATHER_KEY = credentials('openweather-key')
  }

  stages {
    stage('Instalar dependencias') {
      steps {
        sh 'npm install'
      }
    }

    stage('Build') {
      steps {
        sh '''
          export VITE_OPENWEATHER_KEY=$VITE_OPENWEATHER_KEY
          npm run build
        '''
      }
    }

    stage('SonarQube') {
      steps {
        withSonarQubeEnv('SonarQube') {
          sh '''
            sonar-scanner \
              -Dsonar.projectKey=clima-pwa \
              -Dsonar.sources=src \
              -Dsonar.host.url=http://localhost:9000 \
              -Dsonar.login=$SONAR_TOKEN
          '''
        }
      }
    }
  }
}
