pipeline {
  agent {
    docker {
      image 'node:18'
      args '-u root:root'
    }
  }

  environment {
    SONAR_TOKEN = credentials('sonar-token')
    VITE_OPENWEATHER_KEY = credentials('openweather-key')
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm ci'
      }
    }

    stage('Lint') {
      steps {
        sh 'npm run lint || true'
      }
    }

    stage('Build') {
      steps {
        export VITE_OPENWEATHER_KEY=$VITE_OPENWEATHER_KEY
        sh 'npm run build'
      }
    }

    stage('SonarQube Analysis') {
      steps {
        sh """
        npx sonar-scanner \
          -Dsonar.projectKey=clima-pwa \
          -Dsonar.projectName=Clima-PWA \
          -Dsonar.sources=src \
          -Dsonar.host.url=http://sonarqube:9000 \
          -Dsonar.login=$SONAR_TOKEN
        """
      }
    }

  }

  post {
    success {
      echo '✅ Pipeline ejecutado correctamente'
    }

    failure {
      echo '❌ El pipeline falló'
    }

    always {
      cleanWs()
    }
  }
}
